<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:grid="http://schemas.android.com/tools"
    android:orientation="vertical">
    <!--<LinearLayout-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center"-->
    <!--android:gravity="center"-->
    <!--android:orientation="horizontal">-->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <!--<HorizontalScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:fillViewport="true">-->

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            grid:alignmentMode="alignBounds"
            android:padding="8dp"
            android:rowCount="2"
            android:layout_gravity="center">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/dialog_chat_icon"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/floating_sub_action_button_selector"
                        android:elevation="20dp"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:tint="@android:color/white"
                        app:srcCompat="@drawable/chat_icon" />


                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Conversations "
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/dialog_zoom_fit_icon"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/floating_sub_action_button_selector"
                    android:elevation="20dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:tint="@android:color/white"
                    app:srcCompat="@drawable/view_members_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Zoom-Fit"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/dialog_add_new_member"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"

                    android:background="@drawable/floating_sub_action_button_selector"
                    android:elevation="20dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:textSize="16dp"
                    android:tint="@android:color/white"
                    app:srcCompat="@drawable/add_event_member" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:text="Send Invite"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/dialog_add_new_checkpoint"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"

                    android:background="@drawable/floating_sub_action_button_selector"
                    android:elevation="20dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:tint="@android:color/white"
                    app:srcCompat="@drawable/add_checkpoint_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Add Checkpoint"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/dialog_change_mode_icon"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"

                    android:background="@drawable/floating_sub_action_button_selector"
                    android:elevation="20dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:tint="@android:color/white"
                    app:srcCompat="@drawable/change_style_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Map Mode"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/requests_option_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/dialog_request_icon"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/floating_sub_action_button_selector"
                    android:elevation="20dp"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:tint="@android:color/white"
                    app:srcCompat="@drawable/requests_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Received Requests "
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />
            </LinearLayout>
        </GridLayout>
    <!--</HorizontalScrollView>-->
    </ScrollView>
    <!--</LinearLayout>-->

</LinearLayout>