<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/dialog_send_join_request_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Enter the username"
                android:paddingBottom="20dp"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@drawable/edit_text_curson_color_style"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_send_join_request_button"
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:background="#1AFFFFFF"
                android:elevation="20dp"
                android:gravity="center"
                android:text="SEND REQUEST"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="16dp"
                android:text="Sent Requests"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/dialog_event_join_request_sent_recycler_view"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="vertical"
                android:layout_gravity="center">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
</LinearLayout>