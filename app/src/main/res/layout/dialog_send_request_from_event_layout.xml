<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="16dp">
    <EditText
        android:id="@+id/dialog_send_join_request_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:textCursorDrawable="@drawable/edit_text_curson_color_style"
        android:hint="Enter an event ID" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:text="SEND REQUEST"
        android:background="#1AFFFFFF"
        android:elevation="20dp"
        android:textAllCaps="true"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:id="@+id/dialog_send_join_request_button"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="16dp"
        android:text="SENT REQUESTS"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:gravity="center" />
    <android.support.v7.widget.RecyclerView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:id="@+id/dialog_event_join_request_sent_recycler_view">



    </android.support.v7.widget.RecyclerView></LinearLayout></ScrollView>
</LinearLayout>