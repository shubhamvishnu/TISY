<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:padding="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/no_invites_layout"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/no_invites_image_icon"
            android:layout_width="150dp"
            android:layout_marginTop="22dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/no_invites_icon" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="16dp"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="No Invitations!"/>
    </LinearLayout>
    <TextView
        android:id="@+id/inivites_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invites:"
        android:padding="8dp"
        android:textColor="#2f4f4f"
        android:background="@drawable/active_event_item_description_background"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/inivites_text_view"
        android:id="@+id/dialog_received_requests_recycler_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical" />
</RelativeLayout>
</LinearLayout>