<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/join_request_dialog_search_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:gravity="center"
            android:hint="Search using name or username"
            android:paddingBottom="20dp"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@drawable/edit_text_curson_color_style"
            android:textSize="16dp"
            android:textStyle="bold"
            />
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/join_request_dialog_search_image_button"
            android:layout_width="36dp"
            android:layout_gravity="center"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/search_image_icon" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:padding="16dp"
        android:id="@+id/join_request_dialog_recycler_view"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:layout_gravity="center"/>
</LinearLayout>