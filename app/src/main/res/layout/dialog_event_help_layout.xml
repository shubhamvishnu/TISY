<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="24dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:background="@drawable/join_event_background"
                android:gravity="center"
                android:padding="16dp"
                android:text="How to add people to your event?"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14dp" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16dp"
                android:textStyle="normal"
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:text="Share this event ID with people you want to connect:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="event ID"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:id="@+id/help_event_id_text_view"
                android:padding="6dp"/>

            <ru.dimorinny.floatingtextbutton.FloatingTextButton
                android:id="@+id/send_id_fab_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                app:floating_background_color="?attr/colorPrimary"
                app:floating_icon="@drawable/ic_share_white_24dp"
                app:floating_title="Send event ID"
                app:floating_title_color="@android:color/white"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:background="@drawable/join_event_background"
                android:gravity="center"
                android:padding="16dp"
                android:text="What you can do?"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="6dp">

                <android.support.v7.widget.AppCompatImageButton

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    app:srcCompat="@drawable/chat_fab_image_icon" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:text="Chat with your event members"
                        android:textColor="@android:color/black"
                        android:textSize="16dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="6dp">

                <android.support.v7.widget.AppCompatImageButton

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    app:srcCompat="@drawable/shutter_fab_image_icon" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:text="Take a screenshot and share it"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="6dp">

                <android.support.v7.widget.AppCompatImageButton

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    app:srcCompat="@drawable/binoculars_fab_image_icon" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:text="Zoom-Fit to see all the members on the map"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:background="@drawable/join_event_background"
                android:gravity="center"
                android:padding="16dp"
                android:text="More features"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="6dp">

                <android.support.v7.widget.AppCompatImageButton

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    app:srcCompat="@drawable/info_icon" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:text="Event details can be found here"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="6dp">

                <android.support.v7.widget.AppCompatImageButton

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    app:srcCompat="@drawable/checkpoint_image_icon" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:text="Add checkpoints along the way on the map"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="6dp">

                <android.support.v7.widget.AppCompatImageButton

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    app:srcCompat="@drawable/worldmap" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:text="Customize map syles to Dark, night, retro, sliver or aubergine"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="6dp">

                <android.support.v7.widget.AppCompatImageButton

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:padding="6dp"
                    app:srcCompat="@drawable/map_type_option_image_icon" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:text="Choose a type of you choice from Default, Terrain, Satellite or Hybrid"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

            </LinearLayout>
            <Button
                android:id="@+id/done_help_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@drawable/join_event_background"
                android:gravity="center"
                android:padding="16dp"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>